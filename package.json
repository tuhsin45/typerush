{
  "name": "typerush",
  "version": "1.0.0",
  "description": "A full-stack MERN typing speed test application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd frontend && npm run dev",
    "install-client": "cd frontend && npm install",
    "build": "cd frontend && npm run build"
  },
  "keywords": ["typing", "speed", "test", "mern", "react", "nodejs"],
  "author": "TypeRush Team", 
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
